<Page x:Class="PharmaLegacy.Pages.MessagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PharmaLegacy.Pages"
      mc:Ignorable="d" 
       Title="MessagePage" MinHeight="690" MinWidth="1000" >

    <Border BorderBrush="Black" BorderThickness="1,1,1,1" >
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="163*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="1" Foreground="White" FontWeight="Bold" FontSize="24" Margin="20,10,20,20" TextWrapping="Wrap" HorizontalAlignment="Center" Text="{Binding MessageText}"/>
            <StackPanel Margin="10,0,10,10" Grid.Row="1" x:Name="Pane1"/>
            <StackPanel x:Name="BtnPanel" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,10,10">
                <Button  x:Name="Yes"     Click="Yes_Click"      Content="Да"  FontSize="24" Height="86" VerticalAlignment="Bottom" Margin="10,0,0,0" HorizontalAlignment="Right" Width="200" Style="{DynamicResource ActionButtonStyle3}"  />
                <Button  x:Name="No"     Click="No_Click"        Content="Нет"  FontSize="24" Height="86" VerticalAlignment="Bottom" Margin="10,0,0,0" HorizontalAlignment="Right" Width="200" Style="{DynamicResource ActionButtonStyle3}"  />
                <Button  x:Name="Cancel"  Click="Cancel_Click"  Content="Отменить"  FontSize="24" Height="86" VerticalAlignment="Bottom" Margin="10,0,0,0"  HorizontalAlignment="Right" Width="200" Style="{DynamicResource ActionButtonStyle3}"/>
                <Button   x:Name="LastBox" Click="LastBox_Click"  Content="Последний короб"  FontSize="24" Height="86" VerticalAlignment="Bottom" Margin="10,0,0,0"  HorizontalAlignment="Right" Width="230" Style="{DynamicResource ActionButtonStyle3}"/>
            </StackPanel>
        </Grid>
    </Border>
</Page>
