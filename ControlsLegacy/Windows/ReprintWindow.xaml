<Window x:Class="PharmaLegacy.Windows.ReprintWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PharmaLegacy.Windows"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="ReprintWindow" Width="700"  WindowStyle="None" MouseDown="Window_MouseDown" Background="#FF1F1F1F" MinHeight="220" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <System:Double x:Key="TextFontSize">24</System:Double>
        <System:Double x:Key="DescrTextFontSize">20</System:Double>
    </Window.Resources>
    <Border BorderBrush="Black" BorderThickness="1,1,1,1" >
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="163*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="1" Foreground="White" FontWeight="Bold" FontSize="24" Margin="20,10,20,20" HorizontalAlignment="Center" Text="{Binding MessageText}"/>
            <StackPanel x:Name="BtnPanel" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,10,10">
                <Button  x:Name="No"     Click="No_Click"        Content="Повторить текущую"  FontSize="24" Height="86" VerticalAlignment="Bottom" Margin="10,0,0,0" Width="280" Style="{DynamicResource ActionButtonStyle3}"  />
                <Button  x:Name="Cancel" Click="CloseApp_Click"  Content="Закрыть"  FontSize="24" Height="86" VerticalAlignment="Bottom" Margin="10,0,0,0" Style="{DynamicResource ActionButtonStyle3}" HorizontalAlignment="Right" Width="200"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
