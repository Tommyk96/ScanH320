<Window x:Class="PharmaLegacy.Windows.HostWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PharmaLegacy.Windows"
        mc:Ignorable="d"
        Title="HostWindow"  Width="300"  WindowStyle="None" Background="#FF1F1F1F" Height="Auto" MouseDown="Window_MouseDown" SizeToContent="WidthAndHeight">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="41"/>
            <RowDefinition Height="400*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" x:Name="ToolBar" BorderThickness="0,0,0,1" BorderBrush="Black" Height="41" VerticalAlignment="Top" Background="#FF282828">
        </Border>
        <Button Grid.Row="0" x:Name="CloseApp" Click="CloseApp_Click"  SnapsToDevicePixels="True" HorizontalAlignment="Right" Width="46.649" Content="X" Style="{DynamicResource CloseButtonStyle}" Margin="0,0,0,0.291"/>
        <Frame Grid.Row="1" x:Name="frame1" />

