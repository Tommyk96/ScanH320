                    </Canvas>
                </Viewbox>
                <Viewbox Height="22" Width="150" Stretch="Uniform" >
                    <TextBlock  Text="{Binding Path=LastCodeInLastBox}" Foreground="White" HorizontalAlignment="Left"  VerticalAlignment="Center" FontSize="12" FontWeight="Bold" />
                </Viewbox>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Column="0" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="55"/>
                <RowDefinition Height="10"/>
            </Grid.RowDefinitions>
            <Viewbox x:Name="BoxMatrix" MinWidth="600"  Margin="10,5,0,5" ></Viewbox>
            <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Left">
                <Label Grid.Row="1" Foreground="{DynamicResource TextColor}" FontWeight="Bold" FontSize="24" Content="{Binding Path=Diagnostic}"
                Margin="10,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Visibility="Hidden">
                <AccessText Foreground="{DynamicResource TextColor}" FontSize="{DynamicResource TextFontSize}" 
                            MaxWidth="140"  TextWrapping="WrapWithOverflow" Text="Отображать кадр сканера"/>
                <CheckBox Name="Checker3" Grid.Column="1" Margin="20,0,20,0" Style="{DynamicResource SliderCheckBox}"
                            IsChecked="{Binding Path=ScanImgShow}" Click="Checker3_Click"
                            Content="{Binding Path=ScanImgShowState, Mode=OneWay}" VerticalAlignment="Center" Cursor="Hand"
                            Foreground="White" FontFamily="Arial"/>     
            </StackPanel>
        </Grid>

        <!--#region right panel -->
        <StackPanel Grid.Column="1" Grid.Row="1" Width="390" HorizontalAlignment="Right" VerticalAlignment="Stretch" 
                 Margin="1"  Background="#FF2E2E2E">

            <Border BorderBrush="Black" BorderThickness="0" CornerRadius="8" Background="Transparent" Margin="7,0,5,0">
                <Grid Height="260" Margin="9,0"  >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="21"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.ColumnSpan="2" Text="{Binding Path=ProductName}" Foreground="{DynamicResource TextColor}" FontWeight="Bold" FontSize="22" 
                            TextWrapping="WrapWithOverflow" Margin="10,5,0,0" Grid.Row="0" FontFamily="Arial"/>

                    <StackPanel Grid.Row="1">
                        <StackPanel  Orientation="Horizontal" >
                            <TextBlock Text="Партия:"   Foreground="{DynamicResource TextColor}" FontSize="{DynamicResource TextFontSize}" Margin="5,0,0,0" FontFamily="Arial"/>
                            <TextBlock Text="{Binding Path=PartNumber}" FontFamily="Arial" FontWeight="Bold" Foreground="{DynamicResource TextColor}" FontSize="{DynamicResource TextFontSize}" Margin="10,0,0,0"/>
                            <!--<Button Content="TestScan" Click="btnTestGen_Click" Background="Red" Visibility="Visible" />-->
                        </StackPanel>
                        <StackPanel  Orientation="Horizontal" >
                            <TextBlock Text="{Binding Path=ReadyProductCount, StringFormat='Собрано {0} шт.'}" 
                                       Foreground="{DynamicResource TextColor}" FontSize="{DynamicResource TextFontSize}" Margin="5,0,0,0" FontFamily="Arial"/>
                            </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"  Grid.Row="2" >
                        <TextBlock Text="GTIN:"   FontFamily="Arial" Foreground="{DynamicResource TextColor}"
                                   FontSize="{DynamicResource TextFontSize}" Margin="5,0,20,0"/>
                        <TextBlock Text="{Binding Path=GTIN}" FontFamily="Arial" Foreground="{DynamicResource TextColor}" 
                                FontSize="{DynamicResource TextFontSize}" Margin="11,0,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="4" Orientation="Horizontal"  Margin="5,0,0,0">
                        <TextBlock Text="Слой № "  Foreground="{DynamicResource TextColor}" FontSize="{DynamicResource TextFontSize}"  FontFamily="Arial" />
                        <TextBlock Text="{Binding Path=LayerCount}" FontWeight="Bold" Foreground="{DynamicResource TextColor}" FontSize="{DynamicResource TextFontSize}" Margin="10,0,0,0" FontFamily="Arial"/>
                        <TextBlock Text=" из " Foreground="{DynamicResource TextColor}" FontSize="{DynamicResource TextFontSize}" FontFamily="Arial"/>
                        <TextBlock Text="{Binding Path=LayersCount}" FontWeight="Bold" Foreground="{DynamicResource TextColor}" FontSize="{DynamicResource TextFontSize}" FontFamily="Arial"/>
                    </StackPanel>

                    <StackPanel Grid.Row="5" Orientation="Vertical" Height="72">
                        <StackPanel Orientation="Horizontal"  Margin="5,0,0,0">
                            <TextBlock Text="Распознано " Foreground="{DynamicResource TextColor}" FontSize="{DynamicResource TextFontSize}"/>
                            <TextBlock Text="{Binding Path=ReadCodeCount}" FontWeight="Bold" Foreground="{DynamicResource TextColor}" FontSize="{DynamicResource TextFontSize}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"  Margin="5,0,0,0">
                            <TextBlock Text="Верифицировано " Foreground="{DynamicResource TextColor}" FontSize="{DynamicResource TextFontSize}"/>
                            <TextBlock Text="{Binding Path=GoodLayerCodeCount}" FontWeight="Bold" Foreground="{DynamicResource TextColor}" FontSize="{DynamicResource TextFontSize}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"  Margin="5,0,0,0">
                            <TextBlock Text="Ожидалось " Foreground="{DynamicResource TextColor}" FontSize="{DynamicResource TextFontSize}"/>
                            <TextBlock Text="{Binding Path=LayerCodeCount}" FontWeight="Bold" Foreground="{DynamicResource TextColor}" FontSize="{DynamicResource TextFontSize}"/>
                        </StackPanel>
                    </StackPanel>

                    <!--box list-->
                    <StackPanel Grid.Column="1" Grid.Row="1" Grid.RowSpan="5">
                        <ListView x:Name="lvBox" Height="210"  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                  Background="{x:Null}" Foreground="White" BorderBrush="#FF282828"  
                                  ItemContainerStyle="{StaticResource ListViewItem2}" ItemsSource="{Binding ProcessedBoxes}"
                                  Visibility="Hidden">
                            <ListView.View>
                                <GridView  ColumnHeaderContainerStyle="{DynamicResource GridViewColumnHeaderStyle2}">
                                    <GridViewColumn Width="154"  >
                                        <GridViewColumnHeader Height="26" Foreground="Gray" FontSize="{DynamicResource TextFontSize}" IsEnabled="False">Номера коробов</GridViewColumnHeader>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBox BorderThickness="0"  IsReadOnly="True" TextWrapping="Wrap"  
                                                        Foreground="White" Background="Transparent" 
                                                         FontSize="{DynamicResource TextFontSize}" 
                                                         Text="{Binding Serial, Mode=OneWay}" >
                                                </TextBox>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>

                    </StackPanel>
                    
                </Grid>
            </Border>

            <Grid Margin="20,0,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="80"/>
                </Grid.RowDefinitions>
                <Button x:Name="btnHelp"  Grid.Row="1" Click="btnHelp_Click"  HorizontalAlignment="Right" 
                     Width="190" Margin="0,0,10,0" Height="75" FontSize="22" VerticalAlignment="Bottom"   Content="Справка" Style="{DynamicResource ActionButtonStyle3}"/>
                <!--<Button  Grid.Column="1" x:Name="btnCLoseBox"  Click="btnCLoseBox_Click"  HorizontalAlignment="Right" Width="180" 
                     Height="75" FontSize="22" VerticalAlignment="Bottom"   Style="{DynamicResource ActionButtonStyle3}">
                    <AccessText TextWrapping="WrapWithOverflow" Text="Закрыть      короб"/>
                </Button>-->

                <!--<Button Grid.Row="1" x:Name="btnClear"  Click="btnClear_Click"  HorizontalAlignment="Right" Width="180"
                     Margin="0,0,10,0" Height="75" FontSize="22" VerticalAlignment="Bottom"  
                      Style="{DynamicResource ActionButtonStyle3}">
                    <AccessText TextWrapping="WrapWithOverflow" Text="Очистить    короб"/>
                </Button>-->
                <Button  Grid.Row="1" Grid.Column="1" x:Name="btnBrack"  Click="btnBrack_Click" 
                      HorizontalAlignment="Right" Width="180" Margin="0,0,0,0" Height="75" FontSize="22" VerticalAlignment="Bottom"   Content="Брак" Style="{DynamicResource ActionButtonStyle3}"/>
                <Button  Grid.Row="2" x:Name="btnReprint"  Click="btnReprint_Click"  HorizontalAlignment="Right"
                      Width="180" Margin="0,0,10,0" Height="75" FontSize="22" VerticalAlignment="Bottom"   Content="Перепечатать" Style="{DynamicResource ActionButtonStyle3}"/>
                <!--<Button  Grid.Row="2" Grid.Column="1" x:Name="btnSample"  Click="btnSample_Click"  HorizontalAlignment="Right"
                      Width="180" Margin="0,0,0,0" Height="75" FontSize="22" VerticalAlignment="Bottom"   Content="Образец" Style="{DynamicResource ActionButtonStyle3}"/>-->

                <ToggleButton Grid.Row="2" Grid.Column="1" x:Name="btnRight"  Click="btnRight_Click"  HorizontalAlignment="Right" Width="180" 
                           Margin="0,0,0,0" Height="75" FontSize="24" VerticalAlignment="Bottom"  IsEnabled="{Binding RightScanEnable}"
                           Style="{DynamicResource ActionToggleButtonStyle3}">
                    <AccessText TextWrapping="WrapWithOverflow" Text="Ручной       ввод"/>
                </ToggleButton>

                <!--<Button Grid.Row="3"  x:Name="btnStart"  Click="btnStart_Click"  HorizontalAlignment="Right" Width="180" Margin="0,0,10,0" Height="75" FontSize="24" VerticalAlignment="Bottom"   Content="Старт" Style="{DynamicResource ActionButtonStyle3}" />-->
                <ToggleButton Grid.Row="3" Grid.Column="0" x:Name="btnStart"  Click="btnStart_Click"   HorizontalAlignment="Right" Width="180"
                           Margin="0,0,10,0" Height="75" FontSize="24" VerticalAlignment="Bottom" IsChecked="{Binding StopLineInverce}" 
                           Content="Старт" Style="{DynamicResource ActionToggleButtonStart}"/>

                <ToggleButton Grid.Row="3" Grid.Column="1" x:Name="btnStop"  Click="btnStop_Click"  HorizontalAlignment="Right" Width="180"
                           Margin="0,0,0,0" Height="75" FontSize="24" VerticalAlignment="Bottom" IsChecked="{Binding StopLine}" 
                           Content="Стоп" Style="{DynamicResource ActionToggleButtonStyle3}"/>


            </Grid>
        </StackPanel>
        <!--#endregion-->
    </Grid>
</Page>
