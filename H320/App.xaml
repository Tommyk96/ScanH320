<Application x:Class="BoxAgr.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BoxAgr"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="ObjectLightColor" Color="#FF007ACC"/>
        <SolidColorBrush x:Key="TextColor" Color="White"/>
        <System:Double x:Key="TextFontSize">18</System:Double>
        <System:Double x:Key="LabelFontSize">16</System:Double>

        <Style x:Key="ActionButtonStyle3" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#FF373737" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="SnapsToDevicePixels" Value="True" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="Border1"  CornerRadius="0" BorderThickness="1" BorderBrush="#FF282828" Background="#FF373737" >
                            <ContentPresenter x:Name="MyContentPresenter"  Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" />
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource ObjectLightColor}" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter TargetName="Border1" Property="Background" Value="{StaticResource ObjectLightColor}" />
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="OrangeRed" />
                                <Setter TargetName="Border1" Property="Background" Value="OrangeRed" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionButtonStyle4" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#FFEF444D" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="SnapsToDevicePixels" Value="True" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="Border1"  CornerRadius="0" BorderThickness="2" BorderBrush="White" Background="#FFEF444D" >
                            <ContentPresenter x:Name="MyContentPresenter"  Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" />
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource ObjectLightColor}" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter TargetName="Border1" Property="Background" Value="{StaticResource ObjectLightColor}" />
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="OrangeRed" />
                                <Setter TargetName="Border1" Property="Background" Value="OrangeRed" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FF373737" />
                                <Setter Property="Foreground" Value="Gray" />
                                <Setter TargetName="Border1" Property="Background" Value="#FF282828"  />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionToggleButtonStyle3" TargetType="{x:Type ToggleButton}">
            <Setter Property="Background" Value="#FF373737" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="SnapsToDevicePixels" Value="True" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border x:Name="Border1"  CornerRadius="0" BorderThickness="1" BorderBrush="#FF282828" Background="#FF373737" >
                            <ContentPresenter x:Name="MyContentPresenter"  Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" />
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource ObjectLightColor}" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter TargetName="Border1" Property="Background" Value="{StaticResource ObjectLightColor}" />
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="OrangeRed" />
                                <Setter TargetName="Border1" Property="Background" Value="OrangeRed" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>

                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="OrangeRed" />
                                <Setter TargetName="Border1" Property="Background" Value="OrangeRed" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FF373737" />
                                <Setter Property="Foreground" Value="Gray" />
                                <Setter TargetName="Border1" Property="Background" Value="#FF282828"  />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

