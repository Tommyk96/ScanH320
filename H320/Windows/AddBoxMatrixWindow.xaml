<Window x:Class="BoxAgr.Windows.AddBoxMatrixWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:BoxAgr.Windows"
        mc:Ignorable="d"
        Title="AddBoxMatrixWindow" Height="450" Width="500" WindowStyle="None" MouseDown="Window_MouseDown" Background="#FF1F1F1F"
        SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <System:Double x:Key="TextFontSize">20</System:Double>
        <System:Double x:Key="DescrTextFontSize">17</System:Double>
    </Window.Resources>
    <Grid  Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="90"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#FF282828"></Border>
        <TextBlock Grid.ColumnSpan="2" Text="Добавление тары" FontSize="24"   HorizontalAlignment="Center" Foreground="White"/>

        <TextBlock Grid.Row="2" Grid.Column="0"  Text="Имя:" Foreground="{DynamicResource TextColor}" FontSize="{DynamicResource LabelFontSize}" Margin="10,0,0,0"/>
        <TextBox   Grid.Row="2" Grid.Column="1" Text="{Binding Name}"   
                                                                   Foreground="White" Background="#FF373737" FontSize="{DynamicResource TextFontSize}"  FontFamily="Arial"  >
            <TextBox.BorderBrush>
                <LinearGradientBrush EndPoint="0,20" StartPoint="0,0" MappingMode="Absolute">
                    <GradientStop Color="#FFABADB3"/>
                    <GradientStop Color="#FFE2E3EA"/>
                    <GradientStop Color="#FF121212"/>
                </LinearGradientBrush>
            </TextBox.BorderBrush>
        </TextBox>

        <TextBlock Grid.Row="4" Grid.Column="0"  Text="GTIN:" Foreground="{DynamicResource TextColor}" FontSize="{DynamicResource LabelFontSize}" Margin="10,0,0,0"/>
        <TextBox   Grid.Row="4" Grid.Column="1" Text="{Binding GTIN}"  
                                                           Foreground="White" Background="#FF373737" FontSize="{DynamicResource TextFontSize}"  FontFamily="Arial"  >
            <TextBox.BorderBrush>
                <LinearGradientBrush EndPoint="0,20" StartPoint="0,0" MappingMode="Absolute">
                    <GradientStop Color="#FFABADB3"/>
                    <GradientStop Color="#FFE2E3EA"/>
                    <GradientStop Color="#FF121212"/>
                </LinearGradientBrush>
            </TextBox.BorderBrush>
        </TextBox>

        <TextBlock Grid.Row="6" Grid.Column="0"  TextWrapping="WrapWithOverflow"
                   Text="Отображать картинку:" Foreground="{DynamicResource TextColor}" FontSize="{DynamicResource LabelFontSize}" 
                   Margin="10,0,0,0"/>

        <CheckBox Grid.Row="6" Grid.Column="1"  Style="{DynamicResource SliderCheckBox}"
          IsChecked="{Binding Path=BoxGrid}" Margin="40,0,0,0"
          Content="{Binding Path=BoxGridState, Mode=OneWay}" VerticalAlignment="Center" Cursor="Hand"
          Foreground="White" FontSize="{DynamicResource DescrTextFontSize}"  FontFamily="Arial"/>



        <!--кнопки-->
        <StackPanel  Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="15" Grid.ColumnSpan="2" Margin="10">
            <Button x:Name="btnSave"    Click="btnSave_Click"  Width="200" Margin="0,0,0,0" Height="80" FontSize="24"
                    VerticalAlignment="Bottom"   Content="Сохранить" Style="{DynamicResource ActionButtonStyle3}"/>
            <Button x:Name="btnCancel"  Click="btnCancel_Click"  Width="200" Margin="5,0,0,0" Height="80" FontSize="24"
                    VerticalAlignment="Bottom"   Content="Отменить" Style="{DynamicResource ActionButtonStyle3}"/>
        </StackPanel>
    </Grid>
</Window>
